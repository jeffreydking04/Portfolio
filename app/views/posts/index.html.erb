<div id="blog-container">
  <div id="blog-heading">
    <h1>Musings</h1><br>
    <h3 id="blog-prologue">A web log of my journey into web development.</h3>
  </div>
  <br>
  <% if current_user && current_user.name == 'jeffrey' %>
    <%= link_to 'New Post', new_post_path, class: 'btn btn-dutch' %>
  <% end %>

  <% @posts.each do |post| %>
    <div class="media">
      <div class="media-body post-title">
        <h3><%= post.title %></h3></br>
      </div>
      <div class="media-content post-body">
          <p><%= post.body %></p>
      </div>
      <div class="media-content time-created">
        <p>Posted on: <%= post.created_at.strftime("%Y-%m-%d") %></p>
      </div>
    </div>
    <% if current_user && current_user.name = 'jeffrey' %>
      <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-dutch' %>
      <%= link_to 'Delete', post, method: :delete, class: 'btn btn-purple', data: {confirm: 'Are you sure you want to delete this post?'} %>
    <% end %>
  <% end %>

</div>